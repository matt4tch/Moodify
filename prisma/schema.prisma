generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// npx prisma migrate dev --name init
//npx prisma generate

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  display_name        String  
  email        String      @unique
  messages    Message[]
}


model Message {
    id           Int      @id @default(autoincrement())
    user    User    @relation(fields: [userId], references: [id])
    userId    Int
    user_prompt     String
    ai_response     String
    day         Int
    month       Int
    year        Int
    @@unique([userId, day, month, year])
}
